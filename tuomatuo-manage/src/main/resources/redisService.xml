<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
            http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd"
       default-lazy-init="false">

	    <bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
	        <property name="maxActive"  value="30" />   
	    	<property name="maxIdle" value="10" />  
	    	<property name="maxWait" value="3000" />
	        <property name="testOnBorrow"  value="true"/>
	        <property name="testWhileIdle" value="true" />
	        <property name="testOnReturn" value="true" />
	        <property name="numTestsPerEvictionRun" value="10" />
	        <property name="timeBetweenEvictionRunsMillis" value="60000" />
	    </bean>
    	
    	<bean id="readInfo" class="redis.clients.jedis.JedisShardInfo">
    		<constructor-arg index="0" value="10.0.0.8" />
    		<constructor-arg index="1"><value>6380</value></constructor-arg>
    		<constructor-arg index="2"><value>2000</value></constructor-arg>
    	</bean>

	    <bean id="readPool" class="redis.clients.jedis.ShardedJedisPool">
	        <constructor-arg index="0" ref="jedisPoolConfig" />
	        <constructor-arg index="1"><list><ref bean="readInfo" /></list></constructor-arg>
	    </bean>
	    
	    <bean id="writeInfo" class="redis.clients.jedis.JedisShardInfo">
    		<constructor-arg index="0" value="10.0.0.8" />
    		<constructor-arg index="1"><value>6380</value></constructor-arg>
    		<constructor-arg index="2"><value>2000</value></constructor-arg>
    	</bean>

	    <bean id="writePool" class="redis.clients.jedis.ShardedJedisPool">
	        <constructor-arg index="0" ref="jedisPoolConfig" />
	        <constructor-arg index="1"><list><ref bean="writeInfo" /></list></constructor-arg>
	    </bean>
	    <bean id="userInfoCache" class="me.mhao.cache.impl.UserInfoCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="callCache" class="me.mhao.cache.impl.CallCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="numberCache" class="me.mhao.cache.impl.NumberCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="notificationCache" class="me.mhao.cache.impl.NotificationCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="smsCache" class="me.mhao.cache.impl.SmsCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="spCache" class="me.mhao.cache.impl.SpCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="dbCache" class="me.mhao.cache.impl.DbCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    <bean id="monitorCache" class="me.mhao.cache.impl.MonitorCacheImpl">
	    	<property name="readPool"><ref bean="readPool"/></property>
	    	<property name="writePool"><ref bean="writePool"/></property>
	    </bean>
	    
	    <bean id="cacheFactory" class="me.mhao.cache.CacheFactory">
	    	<property name="userInfoCache"><ref bean="userInfoCache"/></property>
	    	<property name="callCache"><ref bean="callCache"/></property>
	    	<property name="numberCache"><ref bean="numberCache"/></property>
	    	<property name="notificationCache"><ref bean="notificationCache"/></property>
	    	<property name="spCache"><ref bean="spCache"/></property>
	    	<property name="smsCache"><ref bean="smsCache"/></property>
	    	<property name="dbCache"><ref bean="dbCache"/></property>
	    	<property name="monitorCache"><ref bean="monitorCache"/></property>
	    </bean>
	    
    </beans>